<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partial/header %>
  </head>
  <body>
    <label>Sign up</label>
    <form action='/users' method='post' id='form1'>
      <div class='inputcover'>
        <label>Email</label>
        <input type='text' name='user[email]' value='<%= formData ? formData.email : "" %>' class='<%= emailError ? "errorInput" : "" %>' />
        <span class='error'><%= emailError ? emailError : "" %></span>
      </div><div class='inputcover'>
        <label>Nickname</label>
        <input type='text' name='user[nickname]' value='<%= formData ? formData.nickname : "" %>' class='<%= nicknameError ? "errorInput" : "" %>' />
        <span class='error'><%= nicknameError ? nicknameError : "" %></span>
      </div><div class='inputcover'>
        <label>Password</label>
        <input type='password' name='user[password]' value='' class='<%= passwordError ? "errorInput" : "" %>' />
        <span class='error'><%= passwordError ? passwordError : "" %></span>
      </div><div class='inputcover'>
        <label>Password Configuration</label>
        <input type='password' name='user[passwordConfiguration]' value='' class='<%= passwordConfigurationError ? "errorInput" : "" %>' />
        <span class='error'><%= passwordConfigurationError ? passwordConfigurationError : "" %></span>
      </div>
    </form>
    <table>
      <form action='/' method='get'>
        <button class='rippleItem'>Back</button>
      </form>
      <button class='submit_btn rippleItem' type='submit' form='form1'>Submit</button>
    </table>
    <script src='/js/button.js' type='text/javascript'></script>
    <script src='/js/input.js' type='text/javascript'></script>
  </body>
</html>
