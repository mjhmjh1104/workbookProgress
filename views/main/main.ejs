<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partial/header %>
  </head>
  <body>
    <% if (user) { %>
      <table>
        <form action='/users/<%= user.id %>'>
          <button id='userid' class='rippleItem'><%= user.nickname %></button>
        </form>
        <form action='/logout'>
          <button id='logout' class='rippleItem'>LOGOUT</button>
        </form>
      </table>
    <% } else { %>
      <table>
        <form action='/users/new'>
          <button id='signUp' class='rippleItem'>SIGN UP</button>
        </form>
        <form action='/login'>
          <button id='login' class='rippleItem'>LOGIN</button>
        </form>
      </table>
    <% } %>
    <script src='../js/button.js' type='text/javascript'></script>
  </body>
</html>
