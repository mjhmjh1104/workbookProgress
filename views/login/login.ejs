<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partial/header %>
  </head>
  <body>
    <label>Login</label>
    <div class='login'>
      <div class='inputcover'>
        <form class='loginForm' action='/login' method='post' id='form1'>
          <label>Email</label><div><input type='text' name='email' value='<%= email %>'></div>
          <label>Password</label><input type='text' name='password' value=''>
          <% loginError.forEach(function(e) { %>
            <span class='error'><%= e %></span>
          <% }); %>
        </form>
        <table>
          <form action='/' method='get'>
            <button class='rippleItem'>Back</button>
          </form>
          <button class='submit_btn rippleItem' type='submit' form='form1'>Submit</button>
        </table>
      </div>
    </div>
    <script src='../js/button.js' type='text/javascript'></script>
  </body>
</html>
